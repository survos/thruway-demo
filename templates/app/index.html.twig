{% extends 'base.html.twig' %}

{% block title %}Thruway Demo{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <span id="connection" data-connection-url="{{ connectionUrl }}"></span>

    Listening on {{ connectionUrl }} for random numbers...


    <div id="random-number">Waiting for your first random number, which we'll get from an RPC call</div>


    <ul id="xthruway-log"><li>One</li><li>Two</li></ul>


    <ul id="thruway-log"></ul>



</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script
            src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha256-3edrmyuQ0w65f8gfBsqowzjJe2iM6n0nKciPUp8y+7E="
            crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/autobahnjs/0.11.2/autobahn.min.js" ></script>
    <script src="{{ asset('js/random.js') }}" ></script>

{% endblock %}

